    "definitions": {
        "WindowsSpecificOptions": {
            "type": "object",
            "properties": {
                "smbUser": {
                    "type": "string",
                    "description":"SMB user for the share to which Windows's ISO is mounted",
                    "minLength": 1
                },
                "smbPassword": {
                    "type": "string",
                    "description":"SMB password",
                    "minLength": 1
                },
                "smbRepo": {
                    "type": "string",
                    "description":"SMB repo address for the share to which Windows's ISO is mounted",
                    "minLength": 1,
                    "pattern": "^\\\\"
                },
                "productkey": {
                    "type": "string",
                    "description":"Windows license",
                    "minLength": 1
                }
            },
            "required": ["productkey", "smbUser", "smbPassword", "smbRepo"]
        }
    },
    "allOf": [
        { "$ref": "install-os-types.json#/definitions/BasicOptions" },
        { "$ref": "install-os-types.json#/definitions/AdvanceOptions" },
        { "$ref": "#/definitions/WindowsSpecificOptions" }
    ]
}
